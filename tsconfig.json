{
	"compilerOptions": {
		"target": "es6",
		"module": "es2015",
		"sourceMap": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": true,
		"outDir": "./dist",
		"lib": [
			"es2015",
			"dom"
		]
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"**/*.spec.ts"
	],
	"angularCompilerOptions": {
		"skipTemplateCodegen": true
	}
}
